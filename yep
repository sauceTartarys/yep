from PyQt5.QtWidgets import *
app = QApplication([])
window = QWidget()
quest = QLabel("Скільки ігор насрав в зимі?")window.resize(400,500)
ans1 = QRadioButton("2005")
ans2 = QRadioButton("12")ans3 = QRadioButton("ух шкибидф талет гей")
ans4 = QRadioButton("а ігор цибулинка більше ")
mainLine = QVBoxLayout()
mainLine.addWidget(quest)
h1 = QHBoxLayout()h2 = QHBoxLayout()
h1.addWidget(ans1)
h1.addWidget(ans2)
h2.addWidget(ans3)h2.addWidget(ans4)
mainLine.addLayout(h1)
mainLine.addLayout(h2)
def show_win():    victory_win = QMessageBox()
    victory_win.setText("вірно!\nВи виграли гіроскутер")    victory_win.exec()
def showlose():
    losing = QMessageBox()    losing.setText("Невірно!\nВи не виграли лох")
    losing.exec()

ans1.clicked.connect(showlose)ans2.clicked.connect(showlose)
ans3.clicked.connect(showlose)ans4.clicked.connect(show_win)
window.setLayout(mainLine)
window.show()
app.exec()
